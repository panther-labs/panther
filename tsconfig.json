{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "esnext",
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "Assets/*": ["web/src/assets/*"],
      "Components/*": ["web/src/components/*"],
      "Generated/*": ["web/__generated__/*"],
      "Helpers/*": ["web/src/helpers/*"],
      "Pages/*": ["web/src/pages/*"],
      "Hooks/*": ["web/src/hooks/*"],
      "Hoc/*": ["web/src/hoc/*"],
      "Source/*": ["web/src/*"]
    }
  },
  "allowJs": false
}
